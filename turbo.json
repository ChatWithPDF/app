{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "ANALYZE",
    "NEXT_PUBLIC_BASE_URL",
    "NODE_ENV",
    "NEXT_PUBLIC_ENV",
    "NEXT_PUBLIC_OTP_BASE_URL",
    "NEXT_PUBLIC_USER_SERVICE_APP_ID"
  ],

  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["ANALYZE"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
